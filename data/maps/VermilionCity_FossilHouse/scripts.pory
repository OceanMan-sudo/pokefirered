script NicknamePartyMon {

    msgbox("Give it a nickname?", MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES){
        call(EventScript_GetGiftMonPartySlot)
        call(EventScript_ChangePokemonNickname)
    }
}

